#include <iostream>
#include <conio.h>
using namespace std;
void main(){
	int i,n,c;
	float p,a;
	cout<<"ingrese la cantidad de prioducto: ";
	cin>>n;
	for(i=0;i<n;i++){
		cout<<"ingrese la cantidad del siguiente producto: ";
		cin>>c;
		cout<<"ingrese el precio: ";
		cin>>p;
		a=a+c*p;
	}
	cout<<"total a pagar: "<<a;
	getch();
}
