#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std; 
     int main()
{		 float n,i,mayor,numero;
         cout<<"intrduzca el numero de veces que decea:";
		 cin>>n;
		 mayor=-99999;
         for (i=0;i<n;i++)
		 {
		  cout<<"introduzca el numero que decea:";
		  cin>>numero;
         if(mayor<numero)
		 {
			 mayor=numero;
		 }
	 }
		 cout<<"el numero mayor es:"<<numero;
    getch ();
	return 0;
}

